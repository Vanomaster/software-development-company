            <Border
                DockPanel.Dock="Top"
                Margin="0,12,0,0">
                
                <TextBlock
                    Text="Сотрудники, работающие над заказом"
                    TextAlignment="Center"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontSize="26">
                </TextBlock>
                
            </Border>
            
            <Border
                Name="EmployeesActionsBorder"
                DockPanel.Dock="Top"
                Margin="0,8,0,8"
                IsEnabled="{Binding EmployeesActionsBorderIsEnabled, UpdateSourceTrigger=PropertyChanged}">
                
                <DockPanel
                    LastChildFill="False"><!--Orientation="Horizontal"-->

                    <Border
                        DockPanel.Dock="Left"
                        Margin="0,0,0,0">
                        
                        <mde:PersistentSearch
                            Name="TextBoxFilterEmployees"
                            VerticalAlignment="Top"
                            Padding="0"
                            Height="30"
                            Width="1070"
                            FontSize="14"
                            Background="White"
                            SearchHint="Поиск"
                            SearchIcon="{x:Static md:PackIconKind.Search}"
                            CancelIcon="{x:Static md:PackIconKind.Close}"
                            ClearIcon="{x:Static md:PackIconKind.Broom}"
                            md:ShadowAssist.ShadowDepth="Depth0"
                            PreviewKeyUp="TextBoxFilterEmployeesPreviewKeyUp"/>
                        
                    </Border>
                    
                    <Border
                        DockPanel.Dock="Right"
                        Margin="20,0,0,0">
                        
                        <Button
                            x:Name="BtnAddEmployee"
                            ToolTip="Перейти в режим добавления элементов"
                            Height="Auto"
                            Width="110"
                            BorderThickness="0"
                            Background="#C82753FF"
                            Foreground="White"
                            Click="BtnAddEmployeesClick">
                            
                            <TextBlock
                                x:Name="BtnAddEmployeeTextBlock"
                                Text="Добавить"
                                TextWrapping="Wrap"
                                FontSize="16"
                                HorizontalAlignment="Center"/>
                            
                        </Button>
                        
                    </Border>
                    
                    <Border
                        DockPanel.Dock="Right"
                        Margin="20,0,0,0">
                        
                        <Button
                            x:Name="BtnDeleteEmployee"
                            ToolTip="Удалить выбранные элементы"
                            Height="Auto"
                            Width="100"
                            BorderThickness="0"
                            Background="#C8F02E30"
                            Foreground="White"
                            Click="BtnDeleteEmployeesClick">
                            
                            <TextBlock
                                Text="Удалить"
                                TextWrapping="Wrap"
                                FontSize="16"
                                HorizontalAlignment="Center"/>
                            
                        </Button>
                        
                    </Border>
                    
                </DockPanel>
                
            </Border>
            
            <Border
                DockPanel.Dock="Top">
                        
                    <DataGrid
                        x:Name="DgEmployees"
                        VirtualizingStackPanel.IsVirtualizing="False"
                        AutoGenerateColumns="False"
                        IsReadOnly="False"
                        CanUserAddRows="False"
                        CanUserReorderColumns="True"
                        CanUserResizeColumns="True"
                        CanUserSortColumns="True"
                        GridLinesVisibility="Horizontal"
                        VerticalGridLinesBrush="#707070"
                        HorizontalGridLinesBrush="#707070"
                        RowEditEnding="EmployeeRowEditEnding"
                        CellEditEnding="EmployeeCellEditEnding"
                        BeginningEdit="EmployeeBeginningEdit"
                        Background="White"
                        SelectionMode="Extended"
                        SelectionUnit="FullRow"
                        ItemsSource="{Binding Employees, UpdateSourceTrigger=PropertyChanged}">
                    
                        <DataGrid.Resources>
                            <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="Background" Value="#DFF2FE"/>
                                <Setter Property="Foreground" Value="#707070"/>
                            </Style>
                        </DataGrid.Resources>
                    
                        <DataGrid.Columns>
                            <DataGridTextColumn
                                Header="Логин"
                                Binding="{Binding User.Login}"
                                Width="Auto"
                                IsReadOnly="True"/><!--
                            <DataGridTextColumn
                                Header="Серия паспорта"
                                Binding="{Binding PassportSeries}"
                                Width="Auto"/>
                            <DataGridTextColumn
                                Header="Номер паспорта"
                                Binding="{Binding PassportNumber}"
                                Width="Auto"/>-->
                            <DataGridTextColumn
                                Header="Фамилия"
                                Binding="{Binding Passport.LastName}"
                                Width="Auto"/>
                            <DataGridTextColumn
                                Header="Имя"
                                Binding="{Binding Passport.FirstName}"
                                Width="Auto"/>
                            <DataGridTextColumn
                                Header="Отчество"
                                Binding="{Binding Passport.Patronymic}"
                                Width="Auto"/>
                            <DataGridComboBoxColumn 
                                Header="Пол"
                                Width="Auto"
                                ItemsSource="{Binding Source={views:Enumeration 
                                {x:Type cleanModels:Gender}}}" 
                                DisplayMemberPath="Description"
                                SelectedValuePath="Value"
                                SelectedValueBinding="{Binding Passport.Gender}"/>
                            <DataGridTextColumn
                                Header="Дата рождения"
                                Binding="{Binding Passport.BirthDate, StringFormat=\{0:dd.MM.yyyy\}}"
                                Width="Auto"/><!--
                            <DataGridTextColumn
                                Header="Место жительства"
                                Binding="{Binding Passport.Residence}"
                                Width="Auto"/>-->
                            <DataGridComboBoxColumn 
                                Header="Должность"
                                Width="Auto"
                                ItemsSource="{Binding Source={views:Enumeration 
                                {x:Type cleanModels:JobPosition}}}" 
                                DisplayMemberPath="Description"
                                SelectedValuePath="Value"
                                SelectedValueBinding="{Binding JobPosition}"/>
                            <DataGridTextColumn 
                                Header="Электронная почта"
                                Binding="{Binding EmailAddress}"
                                Width="Auto"/>
                        </DataGrid.Columns>
                    </DataGrid>
                
            </Border>
        
